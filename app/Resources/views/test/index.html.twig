{% extends 'base.html.twig' %}

{% block container %}
    <!-- Page Header -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tests for you
                <small>Test yourself</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
    {% block row %}

        {% set i = 0 %}
        {% for test in tests %}
            {% if i is even %}
                <div class="row">
            {% endif %}

                <div class="col-md-6 portfolio-item">
                    <a href="{{ path('test_show', { 'id': test.id }) }}">
                        <img class="img-responsive" src="{{ asset(test.testpic) }}" alt="">
                    </a>

                    <h3>
                        <a href="{{ path('test_show', { 'id': test.id }) }}">{{ test.testname }}</a>
                    </h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
                </div>
            {% if i is odd %}
                </div>
            {% endif %}
            {% set i = i + 1 %}
        {% endfor %}
    {% endblock %}


{% endblock %}

