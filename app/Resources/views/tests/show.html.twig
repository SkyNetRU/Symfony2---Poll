{% extends 'base.html.twig' %}

{% block container %}
    <h1>Tests</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ test.id }}</td>
            </tr>
            <tr>
                <th>Test_name</th>
                <td>{{ test.testname }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{% if test.published %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tests_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tests_edit', { 'id': test.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
