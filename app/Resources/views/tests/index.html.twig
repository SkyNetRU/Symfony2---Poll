{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tests list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Test_name</th>
                <th>Published</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td><a href="{{ path('tests_show', { 'id': test.id }) }}">{{ test.id }}</a></td>
                <td>{{ test.testname }}</td>
                <td>{% if test.published %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tests_show', { 'id': test.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tests_edit', { 'id': test.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tests_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
